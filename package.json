{
  "name": "theme-corner",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"pnpm run tailwind:watch\"",
    "tailwind:watch": "pnpm dlx @tailwindcss/cli -i ./src/css/input.css -o ./templates/assets/css/style.css --watch",
    "tailwind:build": "pnpm dlx @tailwindcss/cli -i ./src/css/input.css -o ./templates/assets/css/style.css --minify",
    "build": "pnpm run tailwind:build && vite build && theme-package"
  },
  "private": true,
  "devDependencies": {
    "@halo-dev/theme-package-cli": "^1.0.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "25.0.9",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "terser": "^5.46.0",
    "vite": "^7.3.1",
    "vite-plugin-static-copy": "^3.1.4"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "alpinejs": "^3.15.4",
    "swiper": "^12.0.3",
    "tocbot": "^4.36.4"
  }
}
